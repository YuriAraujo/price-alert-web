{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>Create Alert</h1>
    </div>
    <div class="form-size">
        <form method="post">
            <div class="form-group">
                <label for="name">Alert/Item Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="url">URL</label>
                <input type="text" class="form-control" id="url" name="url" placeholder="URL">
            </div>
            <div class="form-group">
                <label for="price_limit">URL</label>
                <input type="text" class="form-control" id="price_limit" name="price_limit" placeholder="Ex: 53.25" aria-describedby="priceLimitBlock">
                <p id="priceLimitBlock" class="help-block">You'll receive an email when the price is equal or below this limit.</p>
            </div>
            <button type="submit" class="btn btn-default">Create</button>
        </form>
    </div>
{% endblock %}